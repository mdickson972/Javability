<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_green" >

        <Button
            android:id="@+id/btn_java_101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/mm_btn_java" />

        <Button
            android:id="@+id/btn_selection_statements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_loops"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_java_101"
            android:layout_marginEnd="30dp"
            android:background="@drawable/mm_btn_selection" />

        <Button
            android:id="@+id/btn_loops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_java_101"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/mm_btn_loops" />

        <Button
            android:id="@+id/btn_methods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_loops"
            android:layout_marginEnd="30dp"
            android:background="@drawable/mm_btn_methods" />

        <Button
            android:id="@+id/btn_arrays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_loops"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/mm_btn_arrays" />

        <Button
            android:id="@+id/btn_2d_arrays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_arrays"
            android:layout_marginEnd="30dp"
            android:background="@drawable/mm_btn_2darrays" />

        <Button
            android:id="@+id/btn_constructors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_arrays"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/mm_btn_constructors" />

        <Button
            android:id="@+id/btn_inheritance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_constructors"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/mm_btn_inheritance" />
    </RelativeLayout>

</ScrollView>