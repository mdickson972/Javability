<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_green" >

        <Button
            android:id="@+id/loops_assignment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/loops_btn_assignment" />

        <Button
            android:id="@+id/loops_btn_increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loops_btn_intro"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/loops_assignment"
            android:layout_marginEnd="30dp"
            android:background="@drawable/loops_btn_increment" />

        <Button
            android:id="@+id/loops_btn_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/loops_assignment"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/loops_btn_intro" />

        <Button
            android:id="@+id/loops_btn_while"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/loops_btn_intro"
            android:layout_marginEnd="30dp"
            android:background="@drawable/loops_btn_while" />

        <Button
            android:id="@+id/loops_btn_do_while"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/loops_btn_intro"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/loops_btn_do_while" />

        <Button
            android:id="@+id/loops_btn_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/loops_btn_do_while"
            android:layout_marginEnd="30dp"
            android:background="@drawable/loops_btn_for" />

        <Button
            android:id="@+id/loops_btn_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/loops_btn_do_while"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/assessment_btn" />
    </RelativeLayout>

</ScrollView>